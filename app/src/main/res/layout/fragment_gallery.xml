<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gallery_1"
    android:id="@+id/gallery_layout">

    <ImageButton
        android:id="@+id/gallery_previous"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:elevation="3dp"
        android:background="@drawable/button_circle_white"
        android:src="@drawable/ic_navigate_before"/>

    <TextView
        android:id="@+id/gallery_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_toRightOf="@id/gallery_previous"
        android:layout_toLeftOf="@id/gallery_next"
        android:text="Lorem ipsum et dolorae simum et amet"
        android:textSize="20sp"
        android:textColor="@color/white_fully_opaque"/>

    <ImageButton
        android:id="@+id/gallery_next"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:elevation="3dp"
        android:background="@drawable/button_circle_white"
        android:src="@drawable/ic_navigate_next"/>

</RelativeLayout>